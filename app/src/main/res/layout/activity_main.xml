<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_button"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="Sumar ViewModel"
        app:layout_constraintBottom_toTopOf="@+id/btUserViewModel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btDataBinding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_button"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="DataBinding"
        app:layout_constraintBottom_toTopOf="@+id/btDBLABinding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btLiveData" />

    <Button
        android:id="@+id/btDBLABinding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_button"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="DataBinding LiveData"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btDataBinding" />

    <Button
        android:id="@+id/btLiveData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_button"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="Live Data"
        app:layout_constraintBottom_toTopOf="@+id/btDataBinding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btUserViewModel" />

    <Button
        android:id="@+id/btUserViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_button"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="User ViewModel"
        app:layout_constraintBottom_toTopOf="@+id/btLiveData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btViewModel" />

</androidx.constraintlayout.widget.ConstraintLayout>